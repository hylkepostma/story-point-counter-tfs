{
  "manifest_version": 2,
  "name": "Story Point counter for TFS",
  "description" : "Calculates the total Story Points of all selected User Stories (rows) in the backlog.",
  "version": "1.0",
  "icons": {  "16": "images/icon-16x16.png",
              "32": "images/icon-32x32.png",    
              "48": "images/icon-48x48.png",
              "144": "images/icon-144x144.png"
           },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["content.js"]
  }],
  "browser_action": {
    "default_title": "Count selected Story Points"
  },
  "permissions": ["activeTab"]
}